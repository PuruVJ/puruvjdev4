{
  "include": ["**/*"],

  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "..",
    "module": "es2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "./lib",
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
